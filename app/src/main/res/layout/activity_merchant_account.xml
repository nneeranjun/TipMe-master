<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nilay.tipme.MerchantAccount"
    android:background="@color/bg_register">


    <EditText
        android:id="@+id/bankAccountNumber"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="@color/input_register_bg"
        android:hint="Bank Account Number"
        android:inputType="number"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/input_register"
        android:textColorHint="@color/input_register_hint"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="87dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"/>

    <!-- Login Button --><![CDATA[

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/routingNumber"
        android:layout_alignParentStart="true">

        ]]>

    <EditText
        android:id="@+id/routingNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/input_register_bg"
        android:hint="Routing Number"
        android:inputType="number"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/input_register"
        android:textColorHint="@color/input_register_hint"
        android:layout_weight="1"
        android:layout_below="@+id/bankAccountNumber"
        android:layout_alignStart="@+id/bankAccountNumber"
        android:layout_alignEnd="@+id/bankAccountNumber" />

    <Button
        android:id="@+id/skipButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#ea4c88"
        android:text="Submit"
        android:textColor="@color/white"
        android:onClick="submitMerchant"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/routingNumber"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>




</RelativeLayout>
