<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/test"
        app:civ_border_color="@color/abc_background_cache_hint_selector_material_dark"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"

        android:layout_marginBottom="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Womah Neeranjun"
        android:id="@+id/name"
        android:layout_alignTop="@+id/profile_image"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:textColor="#F7941E"
        android:textSize="16dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/editicon"
        android:layout_marginTop="33dp"
        android:layout_marginRight="20dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="How much?   $"
        android:id="@+id/amountText"
        android:layout_below="@+id/profile_image"
        android:layout_alignParentStart="true"
        android:textColor="@color/bt_black"
        android:layout_marginLeft="25dp"
     android:layout_marginBottom="30dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/amount"

        android:backgroundTint="@color/primary_dark_material_dark"
        android:hint="Max. 200"
        android:textColorHint="@color/bt_light_gray"
        android:paddingLeft="10dp"
        android:textColor="@color/bt_black"
        android:layout_below="@+id/profile_image"
        android:layout_alignEnd="@+id/imageView7"
        android:layout_marginTop="-5dp"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/message"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/amountText"
        android:layout_centerHorizontal="true"
        android:background="@drawable/message"
        android:hint="Enter your message "
        android:textColorHint="@color/bt_light_gray"
        android:gravity="start"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:maxLength="200"
        android:textColor="@color/bt_black"


        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:text="Tip"
        android:id="@+id/payButton"
        android:textSize="15dp"
        android:gravity="center"
        android:background="#f7941e"
        android:onClick="login"
        android:textStyle="bold"
        android:layout_below="@+id/message"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Powered by"
        android:id="@+id/poweredBy"
        android:textColor="#f7941e"
        android:layout_below="@+id/payButton"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="30dp"
        android:layout_marginRight="13dp"
        />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/imageView8"
        android:src="@drawable/braintreelogo"
android:layout_marginTop="15dp"
        android:layout_below="@+id/payButton"
        android:layout_toEndOf="@+id/poweredBy" />


</RelativeLayout>